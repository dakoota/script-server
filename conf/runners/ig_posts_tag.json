{
  "name": "IG Hashtag Scraper",
  "script_path": "python scripts/ig_posts_by_tag.py",
  "description": "\nEnter the hashtag below (without #) and maximum number of posts to scrape (default is 10,000) then click 'Execute'.\n",
  "parameters": [
    {
      "name": "Instagram Hashtag",
      "required": true,
      "param": "--hashtag",
      "description": "Instagram Hashtag"
    },
    {
      "name": "Maximum Posts",
      "required": true,
      "type": "int",
      "default": "10000",
      "param": "--max",
      "description": "Maximum Posts"
    }
  ],
  "output_files": [
      "outputs/${Instagram Hashtag}-posts.csv"
  ]
}
